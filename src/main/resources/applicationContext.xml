<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <context:component-scan base-package="com.noob.test"/>
    <bean id="user" class="com.noob.test.model.User">
        <constructor-arg name="name" value="luYun"/>
        <constructor-arg name="age" value="29"/>
    </bean>
    <bean id="userService" class="com.noob.test.service.impl.UserServiceImpl"/>
</beans>